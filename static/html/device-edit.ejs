<!DOCTYPE html>
<html lang="ko">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="/static/css/bootstrap.min.css">
  <link rel="stylesheet" href="/static/css/style.css">
  <script defer src="/static/js/device-edit.js"></script>
  <title>테스트폰 대여 관리자 페이지</title>
</head>
<body>
  <body>
    <div class="container-fluid pb-3">
      <div class="row mt-4 mx-3">
        <div class="col align-self-start">
          <div class="row w-100 justify-content-left">
            <div class="col-6 d-flex justify-content-center">
              <a class="btn btn-light menu-btn" href="/device/return">반납</a>
              <a class="btn btn-success menu-btn active" href="/device/edit">디바이스 편집</a>
              <a class="btn btn-light menu-btn" href="/device/add">디바이스 추가</a>
            </div>
          </div>
        </div>
      </div>
      <div class="row m-3">
        <div class="col-12">
          <div class="container-fluid d-flex flex-column align-items-center">
            <div class="row w-100 justify-content-center">
              <div class="col-6 d-flex justify-content-center">
                <button class="btn-success menu-btn active">All</button>
                <button class="btn-light menu-btn">AOS</button>
                <button class="btn-light menu-btn">IOS</button>
              </div>
            </div>
            <div class="row mt-5" style="max-width: 1600px">
              <table border="1" bordercolor="white" width ="1500" height="300" align = "center" >
                <tr align = "center" bgcolor="#a6cd48">
                  <td>No.</td>
                  <td>OS</td>
                  <td>디바이스명</td>
                  <td>편집</td>
                  <td>삭제</td>
                </tr>
                <% allDeviceList.forEach(function(deviceInfo) { %>
                  <tr>
                    <td><%= deviceInfo.id %></td>
                    <td><%= deviceInfo.os %></td>
                    <td><%= deviceInfo.name %></td>
                    <td>
                      <button class="js-edit">
                        편집
                        <span class="js-edit__id" style="display: none;"><%= deviceInfo.id %></span>
                      </button>
                    </td>
                    <td>
                      <button class="js-delete">
                        삭제
                        <span class="js-delete__id" style="display: none;"><%= deviceInfo.id %></span>
                      </button>
                    </td>
                  </tr>
                <% }); %>
            </table>
            </div>
          </div>
        </div>
    </div>
</body>
</html>
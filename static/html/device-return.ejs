<!DOCTYPE html>
<html lang="ko">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="/static/css/bootstrap.min.css">
  <link rel="stylesheet" href="/static/css/style.css">
  <script defer src="/static/js/device-return.js"></script>
  <title>테스트폰 대여 관리자 페이지</title>
</head>
<body>
  <body>
    <div class="container-fluid pb-3">
      <div class="row mt-4 mx-3">
        <div class="col align-self-start">
          <div class="row w-100 justify-content-left">
            <div class="col-6 d-flex justify-content-center">
              <a class="btn btn-success menu-btn active" href="/device/return">반납</a>
              <a class="btn btn-light menu-btn" href="/device/edit">디바이스 편집</a>
              <a class="btn btn-light menu-btn" href="/device/add">디바이스 추가</a>
            </div>
          </div>
        </div>
      </div>
      <div class="row m-3 w-100">
        <div class="col-12">
          <div class="container-fluid d-flex flex-column align-items-center">
            <div class="row w-100 justify-content-center">
              <div class="col-6 d-flex justify-content-center">
                <button class="btn-success menu-btn active">All</button>
                <button class="btn-light menu-btn">AOS</button>
                <button class="btn-light menu-btn">IOS</button>
              </div>
            </div>
            <div class="row mt-5 w-100">
              <table class="table">
                <thead class="thead-dark">
                  <tr>
                    <th scope="col">대여 번호</th>
                    <th scope="col">대여자</th>
                    <th scope="col">부서명</th>
                    <th scope="col">대여 시작 일</th>
                    <th scope="col">반납 예상 일</th>
                    <th scope="col">반납</th>
                  </tr>
                </thead>
                <tbody>
                  <% reservationList.forEach(function(reservation) { %>
                    <tr>
                      <th scope="row"><%= reservation.id %></th>
                      <td><%= reservation.name %></td>
                      <td><%= reservation.department %></td>
                      <td class="start-date" data-date="<%= reservation.start_date %>"></td>
                      <td class="end-date" data-date="<%= reservation.end_date %>"></td>
                      <td>
                        <button class="js-return" data-reservation-id="<%= reservation.id %>">반납</button>
                      </td>
                    </tr>
                  <% }); %>
                </tbody>
              </table>
            </div>
          </div>
        </div>
    </div>
</body>
</html>
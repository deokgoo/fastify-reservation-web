<!DOCTYPE html>
<html lang="ko">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="/static/css/bootstrap.min.css">
  <link rel="stylesheet" href="/static/css/style.css">
  <title>테스트폰 대여</title>
</head>
<body>
  <div class="row mt-4 mx-3">
    <div class="col align-self-start">
      <img src="/static/img/olive_logo.png" alt="logo" width="300px" />
    </div>
  </div>
  <button class="btn bg-olive js-hBack mt-5" style="margin-left: 30px" type="button"> < 이전</button>
  <div class="w-100 d-flex justify-content-center">
    <div class="card w-75">
      <div class="card-body">
        <div class="container-fluid pb-3">
          <div class="row">
            <div class="col-6 d-flex justify-content-center align-items-center">
              <div class="d-flex flex-column align-items-center">
                <img class="js-img" src="<%= deviceInfo.img_url %>" alt="phone img" width="260px">
              </div>
            </div>
            <div class="col-6">
              <div class="d-flex h-100 justify-content-center align-items-center">
                <form class="w-50">
                  <div class="form-group">
                    <label for="formControlInputId">No</label>
                    <input type="text" class="form-control" id="formControlInputId" value="<%= deviceInfo.id %>"
                      readonly>
                  </div>
                  <div class="form-group mt-3">
                    <label for="formControlInputName">모델명</label>
                    <input type="text" class="form-control" id="formControlInputName" value="<%= deviceInfo.name %>"
                      readonly>
                  </div>
                  <div class="form-group mt-3">
                    <label for="formControlInputOS">os</label>
                    <input type="text" class="form-control" id="formControlInputOS"
                      value="<%= deviceInfo.os %> (<%= deviceInfo.os_version %>)" readonly>
                  </div>
                  <div class="form-group mt-3">
                    <label for="formControlInputUserName">성함</label>
                    <input type="text" class="form-control" id="formControlInputUserName">
                  </div>
                  <div class="form-group mt-3">
                    <label for="formControlInputDepart">부서</label>
                    <input type="text" class="form-control" id="formControlInputDepart">
                  </div>
                  <div class="form-group mt-3">
                    <label for="formControlInputStartDate">대여 날짜</label>
                    <input type="date" class="form-control" id="formControlInputStartDate">
                  </div>
                  <div class="form-group mt-3">
                    <label for="formControlInputEndDate">반납 날짜 (예상)</label>
                    <input type="date" class="form-control" id="formControlInputEndDate">
                  </div>
                  <div class="w-100 d-flex justify-content-center">
                    <button class="btn bg-olive mt-5 js-reservation">예약</button>
                  </div>
                </form>
              </div>
            </div>
          </div>
          <div class="row mt-5">
            <div class="col-12">
              <h3 style="margin-left: 30px;">히스토리</h3>
              <table class="table">
                <thead class="thead-dark">
                  <tr>
                    <th scope="col">#</th>
                    <th scope="col">대여자</th>
                    <th scope="col">부서명</th>
                    <th scope="col">대여 시작 일</th>
                    <th scope="col">반납 예상 일</th>
                    <th scope="col">반납 여부</th>
                  </tr>
                </thead>
                <tbody>
                  <% reservationList.forEach(function(reservation) { %>
                    <tr>
                      <th scope="row">
                        <%= reservation.id %>
                      </th>
                      <td>
                        <%= reservation.name %>
                      </td>
                      <td>
                        <%= reservation.department %>
                      </td>
                      <td class="start-date" data-date="<%= reservation.start_date %>"></td>
                      <td class="end-date" data-date="<%= reservation.end_date %>"></td>
                      <td>
                        <% if(reservation.is_return==true){ %>
                          반납 완료
                        <%} else {%>
                          대여중
                          <div class="js-status-no d-none" />
                        <%} %>
                      </td>
                    </tr>
                    <% }); %>
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <script type="module" src="/static/js/reservation.js"></script>
</body>
</html>